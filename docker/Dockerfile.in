# We cannot start from rixed/ramen:dev since it would prevent squashing
FROM debian:buster-slim

# Do not install recommends:
RUN echo 'APT::Install-Recommends "0";' > \
      /etc/apt/apt.conf.d/no_recommends

# Install a few things
RUN apt-get --yes update && \
    DEBIAN_FRONTEND=noninteractive \
      apt-get --yes install \
        g++ \
        gcc \
        libblas-dev \
        liblapack-dev \
        libsasl2-dev \
        libsodium-dev \
        libsqlite3-0 \
        libssl-dev \
        libzmq5-dev \
        util-linux \
        coreutils

# Rebuild a new image from here
RUN echo "version @PACKAGE_VERSION@~0"

# Install ramen
COPY ramen.@PACKAGE_VERSION@.deb /tmp
RUN dpkg -i /tmp/*.deb && rm /tmp/*.deb
# And z3
COPY z3 /usr/bin/z3

# Environment
ENV RAMEN_DIR=/ramen

# cohttp/conduit requires /etc/protocols and /etc/services,
# which debian-slim does not provide:
COPY protocols services /etc/
COPY start /

# Command to be run:
WORKDIR /ramen
ENTRYPOINT ["/start"]

# Collectd:
EXPOSE 25826/UDP
# Fprobe:
EXPOSE 2055/UDP

LABEL maintainer="rixed-docker@happyleptic.org"
