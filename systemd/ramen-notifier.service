[Unit]
Description=Ramen Notifier
PartOf=ramen.target
Documentation=https://rixed.github.io/ramen/man/.html

[Install]
WantedBy=ramen.target

[Service]
EnvironmentFile=-/etc/default/ramen
ExecStart=/usr/bin/ramen notifier --config=/etc/ramen/notifier.conf --stdout
User=ramen
Restart=always
RestartSec=60
