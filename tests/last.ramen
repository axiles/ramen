-- vim: ft=sql expandtab

DEFINE win1 AS
  FROM tests/fixtures/earthquakes/csv
  WHERE year < 2000
  SELECT
    LAST 2 n AS _lst,
    GET(0, _lst) AS last_but_one,
    GET(1, _lst) AS last_one;

-- With null values
DEFINE win2 AS
  FROM tests/fixtures/cars/csv
  WHERE model starts with "A3"
  SELECT
    -- LAST does not work with nullable values:
    LAST 3 COALESCE(CO, 0) AS _lst,
    GET(0, _lst) AS third_to_last,
    GET(1, _lst) AS second_to_last,
    GET(2, _lst) AS last_one;
