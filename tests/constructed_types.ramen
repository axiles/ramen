-- vim: ft=sql expandtab

DEFINE clock AS
  SELECT sum 1 AS tick EVERY 1 SECOND;

DEFINE tuple_exercice AS
  FROM clock
  SELECT 1st ("one"; tick; sum tick) AS one,
         2nd(2nd (42; (1; 17); tick+1)) AS seventeen;

DEFINE vector_exercice AS
  FROM tuple_exercice
  SELECT 1st [one; "two"; "three"] AS eins,
         2nd [eins; string(5th [6;5;4;3;2]); "drei"] AS zwei,
         get(u8(zwei), [eins; zwei; "drei"]) AS drei
