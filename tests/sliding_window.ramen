-- vim: ft=sql expandtab

-- Tumbling windows:

DEFINE sek AS YIELD sequence as seq;
DEFINE tw AS
  SELECT first seq, last seq, group.#count as count, sum(1) as alt_count
  FROM sek
  WHERE seq < 30
  EXPORT
  COMMIT WHEN group.#count=10;

-- Sliding windows:

DEFINE sw AS
  SELECT first seq, last seq, group.#count as count, sum(1) as alt_count
  FROM sek
  WHERE seq < 14
  EXPORT
  COMMIT AND SLIDE 1 WHEN group.#count=10;
